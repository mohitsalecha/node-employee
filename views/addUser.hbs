<script>
    $("form").validate();
</script>

{{# if errors }}
    {{# each errors }}
          <p class="alert alert-danger">{{ this }}</p>
    {{/each}}
{{/if}}
<br />
<form method="post" class="form-horizontal" enctype="multipart/form-data" action="/users/addUser">

    <h3>New Employee</h3>

    <label>Username</label>
    <input type="text" name="username" />

    <label>Password</label>
    <input type="password" name="password" />

    <label for="">Confirm Password</label>
    <input type="password" name="confirmPassword" />

    <label>Full Name</label>
    <input type="text" name="fullName" />

    <label for="">Primary Email</label>
    <input type="email" name="priEmail" />

    <label>Secondary Email</label>
    <input type="email" name="secEmail" />

    <label>Gender</label>
    <select name="gender">
        <option value="male">male</option>
        <option value="female">female</option>
        <option value="other">other</option>
    </select>

    <label for="">DOB</label>
    <input type="date" name="dob" id="dob">

    <label for="">Phone number</label>
    <input type="number" name="phoneno" id="phoneno">

    <label for="">Skill Set (seperated by comma)</label>
    <input type="text" name="skillSet" id="skillSet">

    <label for="">Total Exp.</label>
    <input type="number" name="totalExp" id="totalExp">
    
    <label>Upload Image file</label>
    <input type="file" name="imageFile">

    <label>upload pdf file</label>
    <input type="file" name="pdfFile">
    
    <input type="submit" value="Submit">
</form>